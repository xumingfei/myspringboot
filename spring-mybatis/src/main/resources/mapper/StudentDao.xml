<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.myproject.springmybatis.mapper.StudentMapper">
    <sql id="table">student</sql>
    <select id="findAll" parameterType="com.myproject.springmybatis.model.Student">
        select * from <include refid="table"/>
    </select>
    <insert id="add" parameterType="com.myproject.springmybatis.model.Student">
        insert into
        <include refid="table"/>
        (id,name,person_id,age) values
        ((SELECT REPLACE(UUID(), '-', '')),#{name},#{personId},#{age})
    </insert>

</mapper>